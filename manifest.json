{
  "manifest_version": 3,
  "name": "dependabot rebase button",
  "description": "add [@dependabot rebase] to PR comment",
  "version": "1.1",
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/**/pull/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}
